{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules"]
}
